{
    "name": "Kindle Highlights",
    "version": "1.0",
    "description": "Extract hightlights listed against your book on the Kindle website.",
    "permissions": ["storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/get_started16.png",
            "32": "img/get_started32.png",
            "64": "img/get_started48.png",
            "128": "img/get_started128.png"
        }
    },
    "icons": {
        "16": "img/get_started16.png",
        "32": "img/get_started32.png",
        "64": "img/get_started48.png",
        "128": "img/get_started128.png"
    },
    "manifest_version": 2
}

